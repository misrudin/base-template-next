{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@containers/*": ["containers/*"],
      "@components/*": ["components/*"],
      "@app/*": ["app/*"],
      "@interfaces/*": ["interfaces/*"],
      "@hooks/*": ["hooks/*"],
      "@themes/*": ["themes/*"],
      "@libraries/*": ["libraries/*"],
      "@api/*": ["libraries/api/*"],
      "@helpers/*": ["helpers/*"],
      "@utils/*": ["utils/*"],
      "@providers/*": ["providers/*"],
      "@sample/*": ["sampleResponse/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
